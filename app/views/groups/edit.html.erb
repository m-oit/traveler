<h1 class="mb-4">グループ情報を編集</h1>

<div class="card p-4">
  <%= form_with model: @group, local: true, html: { enctype: 'multipart/form-data' } do |form| %>
    <% if @group.errors.any? %>
      <div class="alert alert-danger">
        <h2><%= pluralize(@group.errors.count, "error") %>が発生しました:</h2>
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :name, 'グループ名', class: 'form-label' %>
      <%= form.text_field :name, id: :group_name, placeholder: "グループ名を入力してください", class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :introduction, '紹介文', class: 'form-label' %>
      <%= form.text_area :introduction, id: :group_introduction, placeholder: "グループの紹介文を入力してください", class: 'form-control', rows: 4 %>
    </div>

    <div class="mb-3">
      <%= form.label :post_image, 'グループ画像', class: 'form-label' %>
      <% if @group.post_image.attached? %>
        <div class="mb-2">
          <%= image_tag @group.post_image.variant(resize: "200x200"), class: 'img-fluid' %>
          <br>
          <%= check_box_tag :remove_image, "1" %> 画像を削除する
        </div>
      <% end %>
      <%= form.file_field :post_image, class: 'form-control' %>
    </div>

    <div class="text-end">
      <%= form.submit '更新する', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div class="mt-3 text-end">
    <%= link_to 'キャンセル', group_path(@group), class: 'btn btn-secondary' %>
  </div>
</div>