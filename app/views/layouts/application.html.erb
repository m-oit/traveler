<!DOCTYPE html>
<html>
  
  <head>
    <title>Traveler</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/9c3f34c97f.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
     <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
   </head>

    <header class="bg-info">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <a class="navbar-brand p-3" href="/">Traveler</a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" 
              aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
           <span class="navbar-toggler-icon"></span>
         </button>
         

      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
         <% if user_signed_in? %>
          
           <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-briefcase"></i><%= link_to 'New Post', new_post_image_path, style: "color: black;" %>
            </li>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-user"></i><%= link_to 'My Page', user_path(current_user.id), style: "color: black;" %>
            </li>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-regular fa-image"></i></i><%= link_to 'Post List', post_images_path, style: "color: black;" %>
            </li>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-person-running"></i><%= link_to "Log out", destroy_user_session_path, method: :delete, style: "color: black;" %>
            </li>
          <% else %>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-user-plus"></i><%= link_to "Sign up", new_user_registration_path, style: "color: black;" %>
            </li>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-plane-circle-check"></i><%= link_to "Log in", new_user_session_path, style: "color: black;" %>
            </li>
          <% end %>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-link"></i><%= link_to 'About', about_path, style: "color: black;" %>
            </li>
            <li class="nav-item mb-3 mr-3">
              <i class="fa-solid fa-user-tie"></i><%= link_to '管理者', new_admin_session_path, style: "color: black;" %>
            </li>
          </ul>
      </div>
   　</div>
    </nav>
</header>

 <main class="mb-auto">
 <div class="d-flex justify-content-center mb-2">
  <%= render 'searches/form' %>
 </div>
   <%= yield %>
 </main>

 <footer>
 <div class="container mt-5">
   <div class="row">
     <div class="mx-auto">
       <p>CopyRight Infratop.inc</p>
     </div>
   </div>
 </div>
</footer>

 </body>
</html>
