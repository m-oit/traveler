<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_image.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container d-flex justify-content-center">
  <div class="row justify-content-center">
    <div class="col-10">
      <div class="d-flex justify-content-center mb-4">
        <h1>Post</h1>
      </div>
    </div>

    <%= form_with model: @post_image, class: "w-100" do |f| %>
      <div class="border border p-4 rounded">
        <div class="form-group">
          <h4>Image</h4>
          <%= f.file_field :image, accept: "image/*" %>
        </div> 
        <div class="form-group">
          <h4>Title</h4>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <h4>Caption</h4>
          <%= f.text_area :caption, class: "form-control", style: "height: 200px;"  %>
        </div>
      </div>
      <div class="form-group mt-2 d-flex justify-content-center">
        <%= f.submit 'Post!', class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
