<h1>投稿を編集する</h1>

<%= form_with(model: @post_image, local: true) do |f| %>
  <% if @post_image.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@post_image.errors.count, "error") %> prohibited this post from being saved:</h4>
      <ul>
        <% @post_image.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "更新する", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to '戻る', post_image_path(@post_image), class: "btn btn-secondary" %>