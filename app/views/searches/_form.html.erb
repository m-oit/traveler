<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get, local: true, class: "my-4" do |f| %>
    <div class="form-row align-items-center">
      <div class="col-auto">
        <%= f.text_field :content, class: 'form-control', placeholder: '検索キーワードを入力' %>
      </div>

      <div class="col-auto">
        <%= f.select :model, options_for_select({ "User" => "user", "Title" => "post_image_title" }), { class: 'form-control' } %>
      </div>

      <div class="col-auto">
        <%= f.select :method, options_for_select({ "完全一致" => "perfect", "前方一致" => "forward", "後方一致" => "backward", "部分一致" => "partial" }), { class: 'form-control' } %>
      </div>

      <div class="col-auto">
        <%= f.submit '検索', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
<% end %>
