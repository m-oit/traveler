<div class="container mt-4">
  <div class="row justify-content-start">
    <div class="col-8">
      <h1 class="mb-4">送信されたメールの一覧</h1>

      <% if @event_notice_emails.present? %>
        <ul class="list-group">
          <% @event_notice_emails.each do |email| %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <div>
                <h3 class="mb-1">
                  <%= link_to email.title, group_event_notice_email_path(@group, email), class: "text-decoration-none text-dark" %>
                </h3>
                <p class="text-muted mb-1"><%= email.body.truncate(20) %></p>
              </div>
              <%= link_to '閲覧', group_event_notice_email_path(@group, email), class: 'btn btn-info btn-sm' %>
            </li>
          <% end %>
        </ul>
      <% else %>
        <p>まだ通知はありません。</p>
      <% end %>

      <div class="mt-3">
        <%= link_to 'グループに戻る', group_path(@group), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>