<h1 class="mb-4">全ユーザー一覧</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.name, admin_user_path(user) %></td>
        <td><%= user.email %></td>
        <td>
          <%= link_to '退会', admin_user_path(user), 
                      method: :delete, 
                      data: { confirm: '本当に退会させますか？' },
                      class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>