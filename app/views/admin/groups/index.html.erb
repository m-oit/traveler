<h1 class="mb-4">全グループ一覧</h1>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">グループ名</th>
      <th scope="col">オーナー</th>
      <th scope="col">操作</th>
    </tr>
  </thead>
  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= link_to group.name, admin_group_path(group) %></td>
        <td><%= group.owner.present? ? group.owner.name : "オーナーなし" %></td>
        <td>
          <%= link_to '削除', admin_group_path(group), 
                      method: :delete, 
                      data: { confirm: '本当に削除しますか？' },
                      class: 'btn btn-danger btn-sm' %>
        </td> 
      </tr>
    <% end %>
  </tbody>
</table>