<table border="1">
  <thead>
    <tr>
      <th>ID</th>
      <th>投稿者</th>
      <th>コメント内容</th>
      <th>対象の投稿</th>
      <th>投稿日</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @group_post_comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= link_to comment.user.name, user_path(comment.user) %></td>
        <td><%= comment.content %></td>
        <td><%= link_to comment.group_post.title, group_post_path(comment.group_post) %></td>
        <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to "削除", admin_group_post_comment_path(comment), method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
