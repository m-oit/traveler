<%= form_with model: [ @group, @event_notice ] do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :event_date %>
    <%= form.datetime_select :event_date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit 'Create Event Notice', class: "btn btn-success" %>
  </div>
<% end %>