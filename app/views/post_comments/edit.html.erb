<h2 class="text-center mb-4">Comment Edit</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-body">
          <%= form_with model: [@post_image, @post_comment], local: true do |f| %>
            <div class="mb-3">
              <%= f.label :comment, "コメント", class: "form-label" %>
              <%= f.text_area :comment, rows: '5', class: "form-control", placeholder: "コメントを編集してください！" %>
            </div>
            <div class="d-flex justify-content-between">
              <%= f.submit "更新する", class: "btn btn-primary" %>
              <%= link_to "戻る", post_image_path(@post_image), class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
