<h1>マイページ</h1>

<div>
  <% if notice %>
    <div class="notice"><%= notice %></div>
  <% elsif alert %>
    <div class="alert"><%= alert %></div>
  <% end %>

  <%= yield %>
    
    <h3><%= @user.name %></h3>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>

<% @post_images.each do |post_image| %>
<div>
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image %>
  <% end %>
  
  <p>image：<%= image_tag post_image.user.get_profile_image(100,100) %></p>
  <p>Title：<%= post_image.title %></p>
  <p>Caption：<%= post_image.caption %></p>
  <p>name:<%= post_image.user.name %></p>
  <p><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id) %></p>
</div>
<% end %>