<h1>マイページ</h1>

<div>
  <% if notice %>
    <div class="notice"><%= notice %></div>
  <% elsif alert %>
    <div class="alert"><%= alert %></div>
  <% end %>

  <%= yield %>
    
    <h3><%= @user.name %></h3>
    <%= image_tag @user.get_profile_image(100,100) %>
    <% if @user == current_user %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
    <% end %>
</div>

<%= render 'post_images/list', post_images: @post_images %>

<% if user_signed_in? && @user == current_user %>
  <% unless @user.email == "test@example.com" then %>
     <div class="mt-3">
        <%= link_to "退会",user_path(current_user.id), class: "destroy-user", method: :delete, "data-confirm" => "本当に退会しますか？" %>
     </div>
  <% end %>
<% end %>