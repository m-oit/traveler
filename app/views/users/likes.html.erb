<h3 class="text-center text-dark bg-light p-3 rounded shadow-sm border border-info mb-5">いいね一覧</h3>

<div class="d-flex flex-column">
  <% @liked_posts.each do |post| %>
    <div class="card mb-3">
      <div class="d-flex align-items-center">

        <%= link_to post_image_path(post) do %>
         <%= image_tag url_for(post.get_image), class: "img-thumbnail me-3", style: "width: 100px; height: 100px; object-fit: cover;" %>
        <% end %>
        
        <div>
          <h5><%= link_to post.title, post_image_path(post), class: "text-decoration-none text-dark" %></h5>
          <p><%= post.caption %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>





<h5>グループ投稿</h5>

<% @liked_group_posts.each do |group_post| %>
  <div class="card mb-3">
    <div class="d-flex align-items-center">
      <%= link_to group_group_post_path(group_post.group, group_post) do %>
        <%= image_tag url_for(group_post.image), class: "img-thumbnail me-3", style: "width: 100px; height: 100px; object-fit: cover;" %>
      <% end %>
      <div>
        <h5>
          <%= link_to group_post.group.name, group_path(group_post.group), class: "text-decoration-none text-dark" %>
        </h5>
        <p>投稿者: <%= group_post.user.name %></p>
      </div>
    </div>
  </div>
<% end %>
</div>